@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Animals</h1>

 @using (Html.BeginForm("Search", "Animals"))
{
  @Html.TextBox("searchAnimals", null, new { placeholder = "Search by Breed or Name" })
  <button type="submit">Search</button>
}

@if (@Model.Count == 0)
{
  <h3>No animals have been added to the shelter yet!</h3>
} 

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{animal.Type}", "Details", new { id = animal.AnimalId })</li>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>